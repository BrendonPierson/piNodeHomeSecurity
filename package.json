{
  "name": "raspi_node_home_security",
  "version": "1.0.0",
  "description": "A home security system built on a raspberry pi running node.js.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "npm run clean && babel src --out-dir dist",
    "pi1": "pm2 start --optimize_for_size --max_old_space_size=128 --gc_interval=100 dist/pi1/sensors.js",
    "lint": "eslint src"
  },
  "keywords": [
    "raspberry",
    "pi",
    "home",
    "security",
    "gpio",
    "alarm"
  ],
  "author": "Brendon Pierson",
  "license": "ISC",
  "dependencies": {
    "firebase": "^2.4.0",
    "moment": "^2.11.2",
    "onoff": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "rimraf": "^2.5.0"
  }
}
